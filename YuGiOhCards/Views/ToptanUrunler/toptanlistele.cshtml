@model IEnumerable<YuGiOhCards.Controllers.ToptanUrunlerController.UrunTransfer>
@*
    For more information on enabling MVC for empty projects, visit https://go.microsoft.com/fwlink/?LinkID=397860
*@
@{
}

<div class="container-fluid">
    <div class="px-lg-5">
        <div class="row">
            @foreach (var i in Model)
            {


                <div class="col-x1-3 col-lg-3 col-md-6 mb-4">
                    <div class="card-footer p-4 pt-0 bg-transparent border-top-0">

                        <a class="btn mt-auto" asp-controller="UrunTransfer" asp-route-id="@i.UrunId" asp-action="UrunTransfer"><img src="@Url.Content(i.UrunFoto)" class="d-block w-100"></a>

                        <div class="text-center">
                            <h5 class="fw-bolder">@Html.DisplayFor(modelItem => i.UrunAd)</h5>
                            <span class="text-muted">@Html.DisplayFor(modelItem => i.UrunFiyat) TL</span>

                        </div>
                    </div>
                </div>

            }
        </div>
    </div>
</div>